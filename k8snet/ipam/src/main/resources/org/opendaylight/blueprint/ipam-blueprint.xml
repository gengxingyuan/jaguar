<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:odl="http://opendaylight.org/xmlns/blueprint/v1.0.0"
    odl:use-default-for-reference-types="true">

    <reference id="dataBroker"
        interface="org.opendaylight.controller.md.sal.binding.api.DataBroker"
        odl:type="default" />

    <odl:clustered-app-config binding-class="org.opendaylight.yang.gen.v1.org.future.ipam.rev180807.IpamConfig" id="ipamConfig" >
        <odl:default-config><![CDATA[
          <ipam-config xmlns="org.future.ipam">
            <pod_cidr>10.0.0.0/8</pod_cidr>
          </ipam-config>
        ]]></odl:default-config>
    </odl:clustered-app-config>

    <bean id="ipamProvider" class="org.future.k8snet.ipam.IpamProvider"
        init-method="init" destroy-method="close">
        <argument ref="ipamConfig" />
        <argument ref="dataBroker" />
    </bean>

    <bean id="nodeListener" class="org.future.k8snet.ipam.listener.NodeListener"
        init-method="init" destroy-method="close">
        <argument ref="dataBroker" />
    </bean>
    <odl:rpc-implementation ref="ipamProvider" />

</blueprint>
